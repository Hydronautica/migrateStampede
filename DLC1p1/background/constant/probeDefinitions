FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      loggingProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

wavegauge
{
    type waveGauge;

    pointDistribution lineDistribution;
    N 1;
    linestart (325 -35 -20);
    lineend   (325.1 -35 -20);
    add       ( 0 0 50);
    axis      z;
    stretch 1.0;

    // REQURIED ONLY FOR NEW FUNCTIONOBJECT IMPLEMENTATION
    writeControl timeStep;
    writeInterval 5;
}

