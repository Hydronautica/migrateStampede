FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../myVars" //Include global variables
radiusRough	#eval "2.5*$D/2" ;
actions
(
    
    {
        name    waterLineRough;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
     	 box ($xmin  #eval "$ymin" #eval "-17*$wave_height") ($xmax  #eval "$ymax" #eval "17.0*$wave_height");
   	}
    }
    
    
    {
   	 // Mandatory (inherited) entries
    	name        combinedRough;
    	type        cellZoneSet;
    	action      new;

    	// Mandatory entries
    	source      setToCellZone;
    	set         waterLineRough;
    }  
    

   

    
);


