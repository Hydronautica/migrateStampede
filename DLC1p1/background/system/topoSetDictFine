FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../myVars" //Include global variables
actions
(
    

    {
        name    waterLineFine;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
     	 box ($xmin  #eval "$ymin" #eval "-6*$wave_height") ($xmax  #eval "$ymax" #eval "6*$wave_height");
   	}
    }
    {
        name    overSetFine;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
     	 box (#eval "$plat_offset_X-0.46*$D" #eval "$plat_offset_Y-0.5*$D" -70) (#eval "$plat_offset_X+0.42*$D" #eval "$plat_offset_Y+0.5*$D" 60);
   	}
    }
    
    
    
    
    {
   	 // Mandatory (inherited) entries
    	name        combinedFine;
    	type        cellZoneSet;
    	action      new;

    	// Mandatory entries
    	source      setToCellZone;
    	set         waterLineFine;
    }  
    {
   	 // Mandatory (inherited) entries
    	name        combinedFine;
    	type        cellZoneSet;
    	action      add;

    	// Mandatory entries
    	source      setToCellZone;
    	set         overSetFine;
    }  
    

   

    
);


// ************************************************************************* //
